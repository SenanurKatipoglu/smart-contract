pragma solidity ^0.8.0;

contract BankingExp{
    
    /** 
     * Author senanurKatipoglu 01/04/2022
     */

    uint256 private amount;
    uint256 private transferAmount;
    string  public errorMessage = "Hatali islem sonradan tekrar deneyiniz."

    function setAmount(uint256 mainAmount) public{
        amount = mainAmount;
    }  

    function doEftTransfer(uint256 eftAmount) public returns(uint256) {
        if(amount => eftAmount){
         transferAmount = eftAmount;
         amount = amount - transferAmount;
         return amount;
        }
        else {
          return amount= 104971169710810532105115108101109;
        }

        function getErrorMessage() public returns(string memory){
            return "error message"
        }


    }
